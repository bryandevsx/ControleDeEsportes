@model List<EspacoModel>
@{
    ViewData["Title"] = "Listagem de espaços";
}

<div class="text-center"> 

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Espaco" asp-action="Criar">Adicionar novo espaço</a>
    </div>
    <br />
    <h1 class="display-4">Listagem de espaços</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Empresa</th>
                <th scope="col">Endereço</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (EspacoModel espaco in Model)
                {
                    <tr>
                        <th scope="row">@espaco.Id</th>
                        <td>@espaco.Empresa</td>
                        <td>@espaco.Endereco</td>
                        <td>@espaco.Telefone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary" role="button" asp-route-id="@espaco.Id" asp-controller="Espaco" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@espaco.Id" asp-controller="Espaco" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
