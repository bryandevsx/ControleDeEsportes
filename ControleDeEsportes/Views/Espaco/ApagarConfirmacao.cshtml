@model EspacoModel
@{
    ViewData["Title"] = "COnfirmação de apagar espaços";
}
<div class="text-center">
    <h3>Realmente deseja apagar o espaço? (@Model.Empresa) </h3>
</div>
<a class="btn btn-primary btn btn-block" role="button" asp-controller="Espaco" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn btn-block" role="button" asp-controller="Espaco" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>